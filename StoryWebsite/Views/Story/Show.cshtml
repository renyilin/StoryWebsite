@using StoryWebsite
@using StoryWebsite.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model StoryWebsite.Models.Story;

@{
    Layout = null;
    ViewData["Title"] = "Show";
    //ViewData["Title"] = Href(slide.url).ToString();
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="@Href("~/CSS/StyleSheet.css")" />
    <link href="https://fonts.googleapis.com/css?family=Margarine|Roboto" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
</head>
<body class="show-body">
    <div class="menubar">
        <a asp-controller="story" asp-action="details" asp-route-id="@Model.storyID" class="menubutton"><i class="fas fa-chevron-left"></i></a>
        <p class="flex-grow-1">1/@Model.slides.Count()</p>
        <button id="play" class="menubutton"><i class="fas fa-play"></i></button>
    </div>
    <div class="slider">
        @foreach (var slide in Model.slides)
        {
            var url = slide.url;
            url = url.Replace('\\','/');
            <div class="slide" style="background: url(@url) no-repeat center center/cover;">
                <div class="content">
                    <h1>@slide.title</h1>
                    <p>@slide.description</p>
                </div>
            </div>
        }
    </div>
    <div class="buttons">
        <button id="prev"><i class="fas fa-arrow-left"></i></button>
        <button id="next"><i class="fas fa-arrow-right"></i></button>
    </div>
    <script src="~/js/show.js"></script>
</body>
</html>
