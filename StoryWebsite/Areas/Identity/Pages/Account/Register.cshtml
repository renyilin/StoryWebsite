@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<form asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <h4>Create a new account.</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <dl class="dl-horizontal">
        <dt>
            <label asp-for="Input.Email" class="form-label col-1"></label>
        </dt>
        <dd>
            <input asp-for="Input.Email" class="form-control col-1" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
            <spacer-10></spacer-10>
        </dd>
        <dt>
            <label asp-for="Input.FullName" class="form-label col-1"></label>
        </dt>
        <dd>
            <input asp-for="Input.FullName" class="form-control col-1" />
            <spacer-10></spacer-10>
        </dd>
        <dt>
            <label asp-for="Input.Password" class="form-label col-1"></label>
        </dt>
        <dd>
            <input asp-for="Input.Password" class="form-control col-1" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
            <spacer-10></spacer-10>
        </dd>
        <dt>
            <label asp-for="Input.ConfirmPassword" class="form-label col-1"></label>
        </dt>
        <dd>
            <input asp-for="Input.ConfirmPassword" class="form-control col-1" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            <spacer-10></spacer-10>
        </dd>
        <dt>

        </dt>
        <dd style="float:left;">
            <button type="submit" class="btn btn-green">Register</button>
        </dd>
    </dl>
    
</form>

