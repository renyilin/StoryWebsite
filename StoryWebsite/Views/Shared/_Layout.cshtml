<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="@Href("~/CSS/StyleSheet.css")" />
    <link href="https://fonts.googleapis.com/css?family=Margarine|Roboto" rel="stylesheet">
</head>
<body>
    <div class="topnav">
        <div class="flex-grow-1">
            <a asp-controller="story" asp-action="index" class="logo">StoryShare</a>
            <a asp-controller="story" asp-action="create" class="nav-btn">Create</a>
            <a asp-controller="story" asp-action="about" class="nav-btn">About</a>
        </div>
        <partial name="_LoginPartial" />
    </div>
    <div class="main">
        @RenderBody()
    </div>
    @*<footer>
            CSE686  Lab #8
        </footer>*@
    @RenderSection("Scripts", required: false)
</body>
</html>
