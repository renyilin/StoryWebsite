@model StoryWebsite.Models.Story;
<!-- statement below required to use Razor TagHelpers -->
@{
    ViewData["Title"] = "Edit Story Blocks";
}
@section scriptslink{
    <script src="https://unpkg.com/react@16/umd/react.development.js"></script>
    <script src="https://unpkg.com/react-dom@16/umd/react-dom.development.js"></script>
    <script src="https://unpkg.com/babel-standalone@6.26.0/babel.js"></script>
    <script type="text/babel" src="~/JS/SlideBar.js">
    </script>
    <script type="text/babel" src="~/JS/SlidesEditor.js">
    </script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
}
<h2>Edit Story Blocks</h2>

<hr />
<a class="back-link" asp-controller="story" asp-action="Details" asp-route-id="@Model.storyID">Back to Details</a>
<div>
    <div style="display:none;" id="storyId">@Model.storyID</div>
    <div id="placeholder"></div>
    <script type="text/babel">
        ReactDOM.render(
        <SlidesEditor />,
        document.getElementById('placeholder')
        );
    </script>
</div>